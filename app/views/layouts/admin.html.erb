<!DOCTYPE html>
<html>
<head>
  <title>果壳里的店</title>
  <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" type="text/css" href="../../assets/global/plugins/bootstrap-toastr/toastr.min.css">

</head>
<body>

  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= admin_root_path %>">网站后台</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if current_user %>
          <li class="<%= 'active' if @current_tab == 'items' %>">
            <%= link_to '商品列表', admin_items_path %>
          </li>
          <li class="<%= 'active' if @current_tab == 'orders' %>">
            <%= link_to '订单列表', admin_orders_path %>
          </li>
          <li class="<%= 'active' if @current_tab == 'categories' %>">
            <%= link_to '商品类别列表', admin_categories_path %>
          </li>
          <li>
            <%= link_to '用户列表', admin_users_path %>
          </li>
          <li>
            <%= link_to '修改密码', edit_password_admin_user_path(current_user) %>
          </li>
          <li>
            <%= link_to '注销', admin_session_path('i'), method: :delete %>
          </li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>
<br/>
<br/>
<br/>
<%= yield %>

  <script src="../../assets/global/plugins/jquery-1.11.0.min.js" type="text/javascript"></script>
  <script src="../../assets/global/plugins/bootstrap-toastr/toastr.min.js"></script>


<script type="text/javascript">
  $(function() {
    setInterval(function(){
      $.get('/admin/orders/new_comming_orders.json', function(data){
        console.log(data);
        if(data.new_orders_count != 0){
          toastr.info('您有新订单等待处理！');
        }
      });
    }, 2500);
  });
</script>
</body>
</html>
