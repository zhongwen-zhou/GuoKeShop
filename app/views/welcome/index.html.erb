            </div>
          </div>
          <!-- END TWO PRODUCTS -->
          <% if false %>
          <!-- BEGIN PROMO -->
          <div class="col-md-6 shop-index-carousel">
            <div class="content-slider">
              <div id="myCarousel" class="carousel slide" data-ride="carousel">
