                <div class="product-item">
                  <div class="pi-img-wrapper">
                    <img src="<%= item.cover_path %>" class="img-responsive" alt="Berry Lace Dress">
                    <div>
                      <a item-id="<%= item.id.to_s %>" href="javascript: void(0);" role="fast-view-start" class="btn btn-default fancybox-fast-view2">详情</a>
