        <!-- slide two end -->
      </div>
      <!-- LayerSlider end -->
    </div>
    <!-- END SLIDER -->
    <% end %>

    <div class="main">
      <div class="container">
        <!-- BEGIN SALE PRODUCT & NEW ARRIVALS -->
        <div class="row margin-bottom-40">
          <!-- BEGIN SALE PRODUCT -->
          <div class="col-md-12 sale-product">
            <h2>新品上市</h2>
            <div class="owl-carousel owl-carousel5">
              <% Item.new_arrivals.on_shelf.order(order_index: :asc).limit(8).each do |item| %>
              <div>
                <div class="product-item">
                  <div class="pi-img-wrapper">
                    <img src="<%= item.cover_path %>" class="img-responsive" alt="Berry Lace Dress">
                    <div>
                      <a item-id="<%= item.id.to_s %>" href="javascript: void(0);" role="fast-view-start" class="btn btn-default fancybox-fast-view2">详情</a>
                    </div>
                  </div>
                  <h3><a href="javascript: void(0);" role="fast-view-start" item-id="<%= item.id.to_s %>" ><%= "#{item.name}-#{item.units}" %></a></h3>
                  <div class="pi-price">¥<%= item.price %></div>
                  <a href="javascript: void(0);" item-id="<%= item.id.to_s %>" class="btn btn-default add2cart">加入购物车</a>
                  <div class="sticker sticker-new"></div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
          <!-- END SALE PRODUCT -->
        </div>
        <!-- END SALE PRODUCT & NEW ARRIVALS -->

        <!-- BEGIN SIDEBAR & CONTENT -->
        <div class="row margin-bottom-40 ">
          <!-- BEGIN SIDEBAR -->
          <%= render('shared/frontend/index_category_container') %>
          <!-- END SIDEBAR -->
          <%#= render('shared/frontend/best_sell_items') %>





          <!-- BEGIN CONTENT -->
          <div class="col-md-9 col-sm-8">
            <h2>特价商品</h2>
            <div class="owl-carousel owl-carousel3">
              <% Item.on_sale.on_shelf.order(order_index: :asc).limit(7).each do |item| %>
