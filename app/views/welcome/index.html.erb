                  <div class="sticker sticker-sale"></div>
                </div>
              </div>
              <% end %>

            </div>
          </div>
          <!-- END CONTENT -->
        </div>
        <!-- END SIDEBAR & CONTENT -->



        <% Category.where(level: 1).each do |top_category| %>
