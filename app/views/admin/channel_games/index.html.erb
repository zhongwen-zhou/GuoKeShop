
<%= flash[:notice] if flash[:notice] %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>编号</th>
      <th>游戏名称</th>
      <th>广告Id</th>
      <th>上架时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
  <%= @games.each_with_index do |channel_game, index| %>
    <% game = channel_game.game %>
    <tr>
      <td><%= index %></td>
      <td><%= game.name %></td>
      <td><%= game.adId %></td>
      <td><%= game.sale_at %></td>
      <td>
        <%= link_to '删除', admin_channel_channel_game_path(channel_game.channel, channel_game), method: :delete, data: {confirm: '你确定删除该渠道的这个游戏么？'} %>
        <%= link_to '管理游戏数据', edit_config_admin_channel_channel_game_path(channel_game.channel, channel_game) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to '新增游戏', new_admin_channel_channel_game_path(params[:channel_id]) %>